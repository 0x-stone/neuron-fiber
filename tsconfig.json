{
  "compilerOptions": {
    "module": "umd",
    "target": "es6",
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": ["es2017"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
